service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read;
    }

    match /users/{walletId} {
      allow read, create;
    }

    match /stones/{gemId} {
      allow read;
    }

    match /countries/{country} {
      allow read;
    }

    match /transactions/{hash} {
          allow read, create, update;
    }
  }
}


