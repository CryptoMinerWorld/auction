service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read;
    }

    match /users/{walletId} {
      allow read, create;
    }

    match /stones/{gemId} {
      allow read, create;
      allow update: if ('auctionIsLive' in request.writeFields)
      allow update: if ('currentPrice' in request.writeFields)
      allow update: if ('maxPrice' in request.writeFields)
      allow update: if ('minPrice' in request.writeFields)
      allow update: if ('deadline' in request.writeFields)
    }
  }
}
